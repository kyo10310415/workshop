// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  progresses                 Progress[]
  externalMaterialCompletions ExternalMaterialCompletion[]

  @@map("users")
}

enum Role {
  USER
  ADMIN
}

// Workshop model
model Workshop {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  isPublic    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  materials  Material[]
  progresses Progress[]

  @@map("workshops")
}

// Material (PDF, Google Docs, Sheets) model
model Material {
  id           Int          @id @default(autoincrement())
  workshopId   Int
  title        String
  type         MaterialType @default(PDF)
  filename     String?
  originalName String?
  fileSize     Int?
  mimeType     String?
  pageCount    Int          @default(0)
  url          String?
  createdAt    DateTime     @default(now())

  workshop                   Workshop                     @relation(fields: [workshopId], references: [id], onDelete: Cascade)
  progresses                 Progress[]
  externalMaterialCompletions ExternalMaterialCompletion[]

  @@map("materials")
}

enum MaterialType {
  PDF
  GOOGLE_DOCS
  GOOGLE_SHEETS
}

// Progress model (user x workshop x material)
model Progress {
  id         Int      @id @default(autoincrement())
  userId     Int
  workshopId Int
  materialId Int?
  lastPage   Int      @default(1)
  completed  Boolean  @default(false)
  updatedAt  DateTime @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  workshop Workshop  @relation(fields: [workshopId], references: [id], onDelete: Cascade)
  material Material? @relation(fields: [materialId], references: [id], onDelete: Cascade)

  @@unique([userId, workshopId, materialId])
  @@map("progresses")
}

model ExternalMaterialCompletion {
  id         Int      @id @default(autoincrement())
  userId     Int
  materialId Int
  completed  Boolean  @default(false)
  updatedAt  DateTime @updatedAt

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  material Material @relation(fields: [materialId], references: [id], onDelete: Cascade)

  @@unique([userId, materialId])
  @@map("external_material_completions")
}
